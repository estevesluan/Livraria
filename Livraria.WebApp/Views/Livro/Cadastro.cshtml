@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<environment include="Development">
    <script src="~/js/livroCadastro.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/livroCadastro.min.js" sp-append-version="true"></script>
</environment>

<script>
    atualizarMenu("menu-cadastro");
</script>

<h2>Cadastro</h2>

<hr>

<main>

    <form id="form-livro">

        <input type="hidden" id="input-id" value="@ViewBag.Id" />


        <div class="form-group text-center">

            <img class="img-cadastro" src="" alt="" id="img-capa" />

        </div>


        <div class="form-row">

            <div class="col-md-6 mb-3">

                <label asp-validation-for="Capa" id="label-capa">Capa</label>
                <div class="custom-file">

                    <input class="custom-file-input" type="file" accept="image/x-png" id="input-capa">
                    <label class="custom-file-label" for="customFile" id="label-selecionar-capa">Selecione a capa</label>

                </div>
                <div class="valid-feedback"></div>

            </div>

        </div>

        <div class="form-row">

            <div class="col-md-12 mb-3">

                <label class="label-campo-obrigatorio" asp-validation-for="Titulo" id="label-titulo">Título</label>
                <input class="form-control" placeholder="Título" maxlength="100" id="input-titulo" />
                <div class="valid-feedback"></div>

            </div>

        </div>

        <div class="form-row">

            <div class="col-md-12 mb-3">

                <label asp-validation-for="Subtitulo" id="label-subtitulo">Subtítulo</label>
                <input class="form-control" placeholder="Subtítulo" maxlength="150" id="input-subtitulo" />
                <div class="valid-feedback"></div>

            </div>

        </div>

        <div class="form-row">

            <div class="col-md-12 mb-3">

                <label class="label-campo-obrigatorio" asp-validation-for="Autor" id="label-autor">Autor</label>
                <input class="form-control" placeholder="Autor" maxlength="100" id="input-autor" />
                <div class="valid-feedback"></div>

            </div>

        </div>

        <div class="form-row">

            <div class="col-md-12 mb-3">

                <label class="label-campo-obrigatorio" asp-validation-for="Resumo" id="label-resumo">Resumo</label>
                <textarea class="form-control" rows="5" id="textarea-resumo"></textarea>
                <div class="valid-feedback"></div>

            </div>

        </div>

        <div class="form-group row">

            <div class="col-sm-10">

                <button class="btn btn-primary" id="btn-salvar">Salvar</button>
                <button class="btn btn-dark" id="btn-novo">Novo</button>
                <button class="btn btn-danger" id="btn-excluir" style="display: none;">Excluir</button>

            </div>

        </div>

    </form>

</main>