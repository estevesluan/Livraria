<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>

        <environment include="Development">
            <link href="~/site.min.css" rel="stylesheet" />
            <link href="~/css/style.css" rel="stylesheet" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        </environment>
        <environment exclude="Development">
            <link href="~/site.min.css" rel="stylesheet" />
            <link href="~/css/style.min.css" rel="stylesheet" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        </environment>
        <script>
            var caminhoBase = "@Url.Content("~/")";
        </script>

    </head>
    <body>
        <environment include="Development">
            <script src="~/site.min.js"></script>
            <script src="~/js/funcoes.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/site.min.js"></script>
            <script src="~/js/funcoes.min.js"></script>
        </environment>

        <div class="navbar navbar-dark shadow-sm">

            <div class="container d-flex justify-content-between">

                <a class="navbar-brand" href="/Home/Index">Livraria</a>

                <nav class="nav nav-pills flex-column flex-sm-row">

                    <a class="flex-sm-fill text-sm-center nav-link active" href="/Home/Index" id="menu-inicio">Início<span class="sr-only">(current)</span></a>
                    <a class="flex-sm-fill text-sm-center nav-link" href="/Home/Lista" id="menu-exemplares">Exemplares<span class="sr-only">(current)</span></a>
                    <a class="flex-sm-fill text-sm-center nav-link" href="/Home/Cadastro" id="menu-cadastro">Cadastro<span class="sr-only">(current)</span></a>
            
                </nav>

            </div>

        </div>

        <partial name="_CookieConsentPartial" />

        <div class="bg-light">

            <div class="container body-content">

                @RenderBody()

            </div>

        </div>

        <footer class="text-muted">

            <div class="container">

                <p>© 2019 - Luan Lourenço Esteves</p>

            </div>
        
        </footer>

        @RenderSection("Scripts", required: false)

    </body>

</html>
